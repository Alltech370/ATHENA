# Configuração do Servidor Athena Dashboard
# Para resolver avisos de HTTPS e melhorar segurança

# Configurações de segurança
SECURE_SSL_REDIRECT = False  # Desabilitar redirecionamento HTTPS em desenvolvimento
SECURE_HSTS_SECONDS = 0      # Desabilitar HSTS em desenvolvimento
SECURE_HSTS_INCLUDE_SUBDOMAINS = False
SECURE_HSTS_PRELOAD = False

# Configurações de conteúdo
SECURE_CONTENT_TYPE_NOSNIFF = True
SECURE_BROWSER_XSS_FILTER = True
X_FRAME_OPTIONS = 'DENY'

# Configurações de cookies
SESSION_COOKIE_SECURE = False  # False para HTTP em desenvolvimento
CSRF_COOKIE_SECURE = False     # False para HTTP em desenvolvimento

# Configurações de upload
MAX_CONTENT_LENGTH = 500 * 1024 * 1024  # 500MB máximo para uploads de vídeo

# Configurações de CORS
CORS_ALLOWED_ORIGINS = [
    "http://localhost:3000",
    "http://127.0.0.1:3000",
    "http://44.223.43.137:3000",
    "https://44.223.43.137:3000"
]

# Configurações de logging
LOG_LEVEL = "INFO"
LOG_FORMAT = "%(asctime)s - %(name)s - %(levelname)s - %(message)s"

# Configurações de modelo
MODEL_CONFIDENCE_THRESHOLD = 0.25
MODEL_IOU_THRESHOLD = 0.45
MODEL_MAX_DETECTIONS = 50

# Configurações de vídeo
VIDEO_MAX_DURATION = 3600  # 1 hora máximo
VIDEO_SUPPORTED_FORMATS = ['.mp4', '.avi', '.mov', '.mkv', '.wmv', '.flv', '.webm', '.m4v']
VIDEO_PROCESSING_WORKERS = 2
